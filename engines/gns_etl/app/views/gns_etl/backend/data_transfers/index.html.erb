<% content_for :page_script do %>
    <script>
        // global modal
        var schedule_modal = new gModal({size: 'sm'});
        var newScheduleCallback;
        
        $(function() {            
            $('.add-schedule-button').click(function(e) {
                e.preventDefault();
                var button = $(this);
                
                schedule_modal.load(button.attr('href'));
                
                newScheduleCallback = function(response) {
                    if (typeof(response.status) !== 'undefined') {
                        showNotification(response.status, response.message);
                        // hide modal
                        schedule_modal.hide();
                        
                        datalists[$('.datalist-schedules').attr('data-id')].refresh();          
                    } else if (typeof(response.redirect) !== 'undefined') {
                        window.location = response.redirect;
                    } else {
                        // validation error
                        schedule_modal.renderHtml(response);
                    }
                };
            });
        });
    </script>
<% end %>
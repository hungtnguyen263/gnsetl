<table class="table table-hover">
    <thead>
        <tr class="bg-info-700">
            <th>Date Time</th>
            <th>Stage</th>
            <th>Message</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        <% @logs.each do |log| %>
            <tr>
                <td class="text-nowrap"><%= log.logtime.strftime("%d/%m/%Y - %T, %L") %></td>
                <td><%= '' %></td>
                <td><%= log.message %></td>
                <td>
                    <% if log.success? %>
                        <span class="badge badge-success">PASSED</span>
                    <% else %>
                        <span class="badge badge-danger">FAILED</span>
                    <% end %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>

<div class="pagination-area">
    <div class="page_entries_info">
        <!-- Showing 1 to 10 of 19 entries -->
        <%= page_entries_info @logs %>
    </div>

    <div class="pagination_style paging_simple_numbers">
        <%= will_paginate @logs, previous_label: 'Prev'.html_safe, next_label: 'Next'.html_safe, renderer: BootstrapPagination::Rails, class: 'align-self-center' %>
    </div>
</div>
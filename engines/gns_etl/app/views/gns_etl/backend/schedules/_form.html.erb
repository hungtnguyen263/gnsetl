<%= form_for([gns_etl, :backend, schedule]) do |f| %>
    <div class="form-group">
        <label class="d-block"><%= t('.name') %> <span class="text-danger">*</span></label>
        <input type="text" class="form-control font-weight-semibold <%= 'border-danger' if schedule.errors.full_messages_for(:name).present? %>"
            placeholder="Schedule name"
            name="schedule[name]"
            value="<%= schedule.name %>"
        >
        <% if schedule.errors.full_messages_for(:name).present? %>
            <span class="form-text text-danger"><%= schedule.errors.full_messages_for(:name).join('<br/>').html_safe %></span>
        <% end %>
    </div>
    
    <div class="form-group">
        <label class="d-block"><%= t('.source_file') %> <span class="text-danger">*</span></label>
        <select class="form-control selectAllowClear"
            data-container-css-class="font-weight-semibold"
            data-placeholder="<%= t('.placeholder_source_file') %>"
            name="schedule[s_file]"
        >
            <option></option>
            <% options = GnsEtl::Schedule::source_file_options %>
            <% options.each do |option| %>
                <option <%= 'selected' if option[:value] == schedule.s_file %> value="<%= option[:value] %>"><%= option[:text] %></option>
            <% end %>
        </select>
    </div>
    
    <div class="text-left">
        <button type="submit" class="btn btn-primary"><%= t('save') %></button>
    </div>
<% end %>